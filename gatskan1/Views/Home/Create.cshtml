@{
}
@model gatskan1.Models.Product

@{
    ViewBag.Title = "Добавление продукта";
}
<form asp_action="Create" asp-asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-formaction="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-formaction="Author" class="control-label">Автор</label>
        <input type="text" asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-formaction="Price" class="control-label">Цена</label>
        <input type="decimal" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>